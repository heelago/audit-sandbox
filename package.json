{
  "name": "audit-sandbox",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "firebase:target:apply": "echo Run: firebase target:apply hosting auditSandbox SITE_ID",
    "deploy:firebase": "firebase deploy --only hosting:auditSandbox",
    "deploy:firebase:sandbox": "powershell -ExecutionPolicy Bypass -File scripts/deploy/firebase-deploy-sandbox.ps1",
    "deploy:firebase:sandbox:debug": "powershell -ExecutionPolicy Bypass -File scripts/deploy/firebase-deploy-sandbox.ps1 -DebugMode",
    "deploy:apphosting": "powershell -ExecutionPolicy Bypass -File scripts/deploy/firebase-deploy-apphosting.ps1",
    "deploy:apphosting:debug": "powershell -ExecutionPolicy Bypass -File scripts/deploy/firebase-deploy-apphosting.ps1 -DebugMode",
    "deploy:apphosting:demo": "powershell -ExecutionPolicy Bypass -File scripts/deploy/firebase-deploy-apphosting-demo.ps1",
    "deploy:apphosting:demo:debug": "powershell -ExecutionPolicy Bypass -File scripts/deploy/firebase-deploy-apphosting-demo.ps1 -DebugMode",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "db:export:sqlite": "tsx scripts/db/export-sqlite.ts",
    "security:check:local": "powershell -ExecutionPolicy Bypass -File scripts/security/check-local-security.ps1",
    "install:ci": "pnpm install --frozen-lockfile --prefer-offline",
    "clean:deploy:local": "powershell -ExecutionPolicy Bypass -Command \"Remove-Item -Recurse -Force .next,.firebase -ErrorAction SilentlyContinue\""
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "firebase-admin": "13.0.0",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^10.0.1",
    "prisma": "^6.19.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "sharp"
    ]
  }
}
